@model WeatherDashboard.Models.SimulationParameters

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Simulation Control Panel</h5>
    </div>
    <div class="card-body">
        <form id="simulationForm">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="DaysToDisplay" class="form-label">Days to Display</label>
                    <input type="number" class="form-control" id="DaysToDisplay" name="DaysToDisplay" value="@Model.DaysToDisplay" min="1" max="365">
                </div>
                <div class="col-md-3">
                    <label for="AverageTemperature" class="form-label">Avg Temp (°C)</label>
                    <input type="number" step="0.1" class="form-control" id="AverageTemperature" name="AverageTemperature" value="@Model.AverageTemperature">
                </div>
                <div class="col-md-3">
                    <label for="TemperatureAmplitude" class="form-label">Temp Amplitude</label>
                    <input type="number" step="0.1" class="form-control" id="TemperatureAmplitude" name="TemperatureAmplitude" value="@Model.TemperatureAmplitude">
                </div>
                <div class="col-md-3">
                    <label for="TimeScale" class="form-label">Time Scale (Frequency)</label>
                    <input type="number" step="0.1" class="form-control" id="TimeScale" name="TimeScale" value="@Model.TimeScale">
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Update Simulation</button>
            </div>
        </form>
    </div>
</div>
